<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the unchecked checkbox drawable -->
    <item android:id="@android:id/checkbox">
        <selector>
            <item android:state_checked="false">
                <layer-list>
                    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
                        <shape android:shape="rectangle">
                            <solid android:color="@android:color/transparent" />
                            <stroke android:width="2dp" android:color="@android:color/black" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>

    <!-- Define the checked checkbox drawable with a line -->
    <item android:id="@android:id/checkbox" android:gravity="center">
        <layer-list>
            <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="2dp" android:color="@android:color/black" />
                </shape>
            </item>
            <!-- Add a line when checked -->
            <item android:drawable="@drawable/ic_baseline_done_24" android:gravity="center" android:width="16dp" android:height="16dp"/>
        </layer-list>
    </item>
</layer-list>
